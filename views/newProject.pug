extends layout

block contenido
    .contenido-principal
        h1 #{pageName}
        if errors
            each error in errors
                .alerta #{error.text}

        form.agregar-proyecto(action="/new-project", method="POST")
            .campo
                label(for="name") Nombre proyecto:
                input(type="text", id="name", name="name", placeholder="Nombre proyecto")
            
            .campo.enviar
                input(type="submit", value="Agregar", class="boton")